    "coveralls": "^2.11.4",
    "eslint": "^1.9.0",
    "eslint-config-airbnb": "^1.0.0",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3",
    "mongodb": "^2.0.48"
